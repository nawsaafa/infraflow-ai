# InfraFlow AI - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENV=development
DEBUG=True
APP_NAME=InfraFlow AI
API_VERSION=1.0.0

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/infraflow

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://infraflow-ai.vercel.app

# ============================================================================
# AI SERVICES
# ============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API (for embeddings)
OPENAI_API_KEY=sk-your-openai-key-here

# Cohere API (optional - for additional embeddings)
COHERE_API_KEY=your-cohere-key-here

# ============================================================================
# VECTOR DATABASE
# ============================================================================
# Pinecone configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=infraflow-docs

# Weaviate configuration (alternative)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# ============================================================================
# DOCUMENT PROCESSING
# ============================================================================
# Azure Document Intelligence (optional - for advanced OCR)
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-key
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Unstructured.io API (optional - for cloud processing)
UNSTRUCTURED_API_KEY=your-unstructured-api-key
UNSTRUCTURED_API_URL=https://api.unstructured.io

# ============================================================================
# FILE STORAGE
# ============================================================================
# Storage bucket name in Supabase
STORAGE_BUCKET=documents

# AWS S3 (alternative storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=infraflow-documents

# Cloudflare R2 (alternative storage)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=infraflow-documents

# ============================================================================
# REDIS & CACHING
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# ============================================================================
# TASK QUEUE (Celery)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Log level
LOG_LEVEL=INFO

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# API KEYS (for service-to-service authentication)
# ============================================================================
# Format: INFRAFLOW_API_KEY_<SERVICE>=<key>:<service_name>:<permissions>
# Example:
# INFRAFLOW_API_KEY_AUTOMATION=abc123:n8n_automation:read,write
# INFRAFLOW_API_KEY_WEBHOOK=def456:webhook_service:write

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# DFI API endpoints (if available)
EBRD_API_URL=https://api.ebrd.com
EBRD_API_KEY=your-ebrd-api-key

EIB_API_URL=https://api.eib.org
EIB_API_KEY=your-eib-api-key

# World Bank API
WORLD_BANK_API_URL=https://api.worldbank.org

# ============================================================================
# FINANCIAL DATA SOURCES
# ============================================================================
# Bloomberg API (for financial data)
BLOOMBERG_API_KEY=your-bloomberg-key

# Currency exchange rates API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# ============================================================================
# EMAIL NOTIFICATIONS (optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@infraflow.ai

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================================================
# WEBHOOKS
# ============================================================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_MONTE_CARLO=True
ENABLE_AI_INSIGHTS=True
ENABLE_COMPLIANCE_CHECKING=True
ENABLE_RISK_ASSESSMENT=True
MAX_DOCUMENT_SIZE_MB=50
MAX_DOCUMENTS_PER_PROJECT=100

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Set to True to enable auto-reload
RELOAD=True

# Set to True to enable API documentation
ENABLE_DOCS=True

# Set to True to enable verbose logging
VERBOSE_LOGGING=False
